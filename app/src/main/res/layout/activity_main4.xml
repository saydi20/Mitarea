<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEDAF1"
    tools:context=".MainActivity4">

    <TextView
        android:id="@+id/etv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categoria 3: Sabritas"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051" />

    <Button
        android:id="@+id/b_pagar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#5FE342"
        android:backgroundTint="#9CE85A"
        android:onClick="pagar"
        android:text="Pagar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.946"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.963" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="127dp"
        android:layout_height="163dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etv1"
        app:layout_constraintVertical_bias="0.08"
        app:srcCompat="@drawable/sa"
        tools:layout_editor_absoluteX="49dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="128dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        app:layout_constraintVertical_bias="0.174"
        app:srcCompat="@drawable/sabr"
        tools:layout_editor_absoluteX="57dp" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="132dp"
        android:layout_height="182dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/ra"
        tools:layout_editor_absoluteX="65dp" />

    <CheckBox
        android:id="@+id/checkBox6"
        android:layout_width="102dp"
        android:layout_height="51dp"
        android:text="$12.00"
        app:layout_constraintBottom_toTopOf="@+id/b_pagar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/etv1"
        app:layout_constraintVertical_bias="0.157" />

    <CheckBox
        android:id="@+id/checkBox7"
        android:layout_width="116dp"
        android:layout_height="47dp"
        android:text="$17.00"
        app:layout_constraintBottom_toTopOf="@+id/b_pagar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/checkBox6"
        app:layout_constraintVertical_bias="0.415" />

    <CheckBox
        android:id="@+id/checkBox8"
        android:layout_width="103dp"
        android:layout_height="45dp"
        android:text="$14.00"
        app:layout_constraintBottom_toTopOf="@+id/b_pagar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toEndOf="@+id/imageView10"
        app:layout_constraintTop_toBottomOf="@+id/checkBox7"
        app:layout_constraintVertical_bias="0.72" />

</androidx.constraintlayout.widget.ConstraintLayout>